<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageMerge.Pages.HomePage">
  <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="240"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <Image Grid.Row ="1" Source="thugLife.png" Aspect="AspectFit" HorizontalOptions="Center"/>
    <Button x:Name="PhotoButton" Grid.Row ="3" Clicked="Button_OnClicked" Text="Select photo" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" FontSize="17" BackgroundColor="Gray" TextColor="White"/>
    
  </Grid>
    
</ContentPage>