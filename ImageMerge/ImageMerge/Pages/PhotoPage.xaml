<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageMerge.Pages.PhotoPage"
             >
 <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
   <StackLayout x:Name="ImageContainer" HorizontalOptions="FillAndExpand">
     <Image x:Name="ThugImage" Aspect="AspectFit" HorizontalOptions="FillAndExpand"/>
     <Image HorizontalOptions="Start" x:Name="Cygaro" Opacity="0" HeightRequest="80" WidthRequest="80" Source="cygaro.png"></Image>
   </StackLayout>
   
   <Button HorizontalOptions="FillAndExpand" Clicked="Button_OnClicked" VerticalOptions="EndAndExpand" Text="Select Photo" FontSize="17" BackgroundColor="Gray" TextColor="White"/>
  
 </StackLayout>
</ContentPage>